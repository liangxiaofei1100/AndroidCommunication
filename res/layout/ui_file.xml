<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
     >
    
      <include 
        android:id="@+id/layout_title"
        layout="@layout/ui_title"
        />

    <!-- 路径导航布局 -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/divider_iv" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <!-- 点击该按钮，选择SD卡或手机内部存储 -->
            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:adjustViewBounds="true"
                android:background="@drawable/file_browser_home"
                android:scaleType="fitXY" />

            <com.dreamlink.communication.ui.SlowHorizontalScrollView
                android:id="@+id/navigation_bar_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:fillViewport="true" >

                <LinearLayout
                    android:id="@+id/tabs_holder"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" />
            </com.dreamlink.communication.ui.SlowHorizontalScrollView>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/divider_iv" />
    </LinearLayout>
    
    <!-- 文件列表布局 -->
    <RelativeLayout
        android:id="@+id/filelist_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/lv_file"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:cacheColorHint="#00000000"
            android:layout_above="@+id/ll_transfer_all"
            />

        <TextView
            android:id="@+id/tv_no_sdcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_sdcard"
            android:visibility="gone"
             />
        <LinearLayout 
            android:id="@+id/ll_transfer_all"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            >
            <Button 
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/cancel"
                android:background="@drawable/button_bg"
                />
            
            <Button 
                android:id="@+id/btn_transfer_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_weight="0.7"
                android:background="@drawable/button_bg"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>