<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/load_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/loader_back"
        android:orientation="horizontal" />

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="invisible" >

        <!-- main ui title -->
        <RelativeLayout
            android:id="@+id/main_tab_banner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center" >

            <!-- 左边layout 显示头像 -->
            <RelativeLayout
                android:id="@+id/title_left_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/title_left_bg" >

                <ImageView
                    android:id="@+id/user_icon_imageview"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/dm_icon_default_user" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/phone_frame" />

                <TextView
                    android:id="@+id/user_name_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:ellipsize="middle"
                    android:maxWidth="45dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </RelativeLayout>

            <!-- 中间layout 显示 连接情况 -->

            <RelativeLayout
                android:id="@+id/title_main_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/title_right_layout"
                android:layout_toRightOf="@+id/title_left_layout"
                android:background="@drawable/title_center_bg" >
                
                <com.dreamlink.communication.ui.SlowHorizontalScrollView
                    android:id="@+id/show_user_scrollview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fillViewport="true" >
                    <LinearLayout
                        android:id="@+id/tabs_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                    	android:paddingRight="5dp"
                        android:orientation="horizontal" />
                </com.dreamlink.communication.ui.SlowHorizontalScrollView>

                <LinearLayout
                    android:id="@+id/show_connect_msg_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ProgressBar
                        android:id="@+id/connect_progress"
                        style="@android:style/Widget.ProgressBar.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                         />

                    <TextView
                        android:id="@+id/connect_progress_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/connecting"
                        android:textColor="@color/white"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                         />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/connect_button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <TextView
                        android:id="@+id/connect_button"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_ok"
                        android:gravity="center"
                        android:text="@string/connect"
                        android:textSize="18sp" />
                </FrameLayout>
            </RelativeLayout>
            <!-- 右边layout显示 邀请 等等 -->

            <RelativeLayout
                android:id="@+id/title_right_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/title_right_bg" >

                <ImageView
                    android:id="@+id/invite_icon_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/btn_title_invite_normal" />

                <TextView
                    android:id="@+id/invite_name_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invite_icon_view"
                    android:layout_centerHorizontal="true"
                    android:text="@string/invite"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>

        <!-- 最底部，tab导航栏 -->

        <RelativeLayout
            android:id="@+id/main_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_tab_bg" >

            <!-- 切换动画 -->

            <ImageView
                android:id="@+id/img_tab_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="matrix"
                android:src="@drawable/main_tab_anim" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="2dp" >

                <!-- 导航按钮 -->

                <LinearLayout
                    android:id="@+id/app_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                     >

                    <ImageView
                        android:id="@+id/img_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="matrix"
                        android:src="@drawable/main_tab_app_selected" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/picture_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" 
                    >

                    <ImageView
                        android:id="@+id/img_pictures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="matrix"
                        android:src="@drawable/main_tab_pic_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/image"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/media_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_media"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="matrix"
                        android:src="@drawable/main_tab_media_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/media"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/file_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_file"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="matrix"
                        android:src="@drawable/main_tab_file_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/file"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/share_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="matrix"
                        android:src="@drawable/main_tab_share_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/history"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- 中间容器 -->

        <LinearLayout
            android:id="@+id/main_tab_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/main_bottom"
            android:layout_below="@+id/main_tab_banner"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/tabpager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>