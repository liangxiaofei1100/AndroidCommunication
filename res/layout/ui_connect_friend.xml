<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- title -->
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:background="#eee"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/close_imageview"
            android:layout_toLeftOf="@+id/close_imageview"
            android:gravity="center"
            android:text="@string/connect_tip_msg" />

        <ImageView
            android:id="@+id/close_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/close_btn_bg" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:layout_above="@+id/divider"
        android:layout_below="@+id/title"
        >

        <!-- 1 -->
        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/keyonglianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connectable" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/keyonglianjie"
                android:background="@drawable/gray_divide" />

            <ProgressBar
                android:id="@+id/searching_bar"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <!-- 1 -->
        
         <!-- 3 -->
        <TextView
            android:id="@+id/search_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bg"
            android:layout_below="@+id/one"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/searching_sever"
            android:textSize="20sp" />
         <!-- 3 -->
         
        <!-- 2 -->

        <RelativeLayout
            android:id="@+id/two"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/search_view" >

            <!-- show server list -->

            <ListView
                android:id="@+id/server_listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="true"
                 />

            <TextView
                android:id="@+id/no_server_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="@string/server_not_found" />
        </RelativeLayout>
        <!-- 2 -->
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/divider_iv" 
        android:layout_above="@+id/create_connect_btn"
        />

    <Button
        android:id="@+id/create_connect_btn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_ok"
        android:text="@string/create_server" />

</RelativeLayout>