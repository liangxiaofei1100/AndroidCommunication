<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/classify_nav_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/file_classify_view1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/path_gallery_first_item_bg"
            android:gravity="center"
            android:text="文件分类"
            android:textColor="@drawable/path_selector"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/file_classify_view2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/path_gallery_first_item_bg"
            android:gravity="center"
            android:textColor="@drawable/path_selector"
            android:textSize="15sp" />
    </LinearLayout>
    
    <View 
        android:id="@+id/classify_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_iv"
        />

    <ListView
        android:id="@+id/classify_listview"
        style="@style/note_list_style"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>