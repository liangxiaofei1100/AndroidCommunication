<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>

			<!-- 渐变 -->
			<gradient android:endColor="#888a8a8a" android:startColor="#888a8a8a"
				android:type="linear" />
			<!-- 描边 
			<stroke android:dashGap="3dp" android:dashWidth="5dp"
				android:width="2dp" android:color="#dcdcdc" />-->
			<!-- 圆角 -->
			<corners android:radius="0dp" />

			<padding android:bottom="8dp" android:left="8dp"
				android:right="8dp" android:top="8dp" />
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<gradient android:endColor="#888a8a8a" android:startColor="#888a8a8a"
				android:type="linear" />
<!-- 			<stroke android:width="2dp" android:color="#dcdcdc" /> -->
<!-- 			<corners android:radius="2dp" /> -->
<!-- 			<padding android:bottom="8dp" android:left="8dp" -->
<!-- 				android:right="8dp" android:top="8dp" /> -->
		</shape>
	</item>
	<item>
		<shape>
			<!-- 渐变 -->
			<gradient android:endColor="@android:color/transparent" android:startColor="@android:color/transparent"
				android:type="linear" />
<!-- 			<padding android:bottom="8dp" android:left="8dp" -->
<!-- 				android:right="8dp" android:top="8dp" /> -->
		</shape>
	</item>

</selector>