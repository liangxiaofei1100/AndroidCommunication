<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dreamlink.communication"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dreamlink.communication.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dreamlink.communication.server.ClientListActivity"
            android:label="Client List"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dreamlink.communication.client.ServerListActivity"
            android:label="Server List"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dreamlink.communication.AppListActivity"
            android:label="@string/label_applist"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".chat.ChatLauncher"
            android:label="@string/chat" >
            <intent-filter>
                <action android:name="com.dreamlink.communication.action.app" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dreamlink.communication.chat.ClientActivity"
            android:label="@string/app_name_client"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dreamlink.communication.chat.ServerActivity"
            android:label="@string/app_name_server"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dreamlink.communication.fileshare.FileShareLauncher"
            android:label="@string/fileshare_label" >
            <intent-filter>
                <action android:name="com.dreamlink.communication.action.app" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dreamlink.communication.fileshare.FileListActivity"
            android:label="@string/fileshare_label"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dreamlink.communication.fileshare.FileMainUI"
            android:label="@string/fileshare_label"
            android:screenOrientation="portrait" >
        </activity>
        
        <service 
            android:name="com.dreamlink.communication.fileshare.FileShareServerService"
            >
        </service>
        <activity
            android:name="com.dreamlink.communication.StabilityTest"
            android:label="StabilityTest" >
            <intent-filter>
                <action android:name="com.dreamlink.communication.action.app" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dreamlink.communication.StabilityTestClient"
            android:label="StabilityTestClient"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dreamlink.communication.StabilityTestServer"
            android:label="StabilityTestServer"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.dreamlink.communication.UserInformationActivity"
            android:label="@string/lable_user_info"
            android:screenOrientation="portrait" >
        </activity>
        
    </application>

</manifest>